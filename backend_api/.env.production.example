# Example .env.production for VPN Backend
# Copy this to /srv/vpn-api/.env.production on production server
# and set actual values from your infrastructure

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://vpn_user:CHANGE_ME_DB_PASSWORD@db:5432/vpn_db

# ============================================================================
# SECURITY & JWT
# ============================================================================
# Generate with: openssl rand -base64 32
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_32_BYTES
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# WIREGUARD CONFIGURATION
# ============================================================================
WG_INTERFACE=wg0
WG_HOST_SSH=root@62.84.98.109
WG_APPLY_SCRIPT=/srv/vpn-api/scripts/wg_apply.sh
WG_REMOVE_SCRIPT=/srv/vpn-api/scripts/wg_remove.sh
WG_GEN_SCRIPT=/srv/vpn-api/scripts/wg_gen_key.sh
WG_APPLY_ENABLED=true

# WireGuard server endpoint (for client config)
WG_SERVER_IP=146.103.99.70
WG_ENDPOINT=146.103.99.70:51820
WG_DNS=8.8.8.8,8.8.4.4

# ============================================================================
# DEBUG & LOGGING
# ============================================================================
DEBUG=False
LOG_LEVEL=INFO

# ============================================================================
# ALLOWED HOSTS
# ============================================================================
ALLOWED_HOSTS=146.103.99.70,api.vpn.example.com

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=your_smtp_password
# MAIL_FROM=noreply@example.com

# ============================================================================
# IN-APP PURCHASE INTEGRATION
# ============================================================================
# Apple App Store
APPLE_TEAM_ID=CHANGE_ME_APPLE_TEAM_ID
APPLE_KEY_ID=CHANGE_ME_APPLE_KEY_ID
APPLE_PRIVATE_KEY=CHANGE_ME_APPLE_PRIVATE_KEY_BASE64_ENCODED
APPLE_BUNDLE_ID=com.vpn.example

# Google Play
GOOGLE_PLAY_PACKAGE=com.vpn.example
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=/srv/vpn-api/google-play-key.json

# ============================================================================
# PAYMENT PROCESSING (If using Stripe)
# ============================================================================
# STRIPE_API_KEY=sk_live_CHANGE_ME
# STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
# STRIPE_PRODUCT_ID=prod_CHANGE_ME

# ============================================================================
# ERROR TRACKING (Optional)
# ============================================================================
# SENTRY_DSN=https://xxxxxxxx@sentry.io/123456

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# PROMO CODES & ADMIN
# ============================================================================
# Secret code for admin promotion endpoint
PROMOTE_SECRET=CHANGE_ME_RANDOM_PROMO_SECRET

# ============================================================================
# REDIS (If using for caching/sessions)
# ============================================================================
# REDIS_URL=redis://redis:6379/0
